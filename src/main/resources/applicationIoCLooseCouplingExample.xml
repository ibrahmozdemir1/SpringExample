<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDataProvider" class="com.loose.coupling.UserDatabaseProivder" />
    <bean id="webServiceDataProvider" class="com.loose.coupling.WebServiceProivder" />


    <bean id="userManagerWithUserDataProvider" class="com.loose.coupling.UserManager">
        <constructor-arg ref="userDataProvider" />
    </bean>

    <bean id="userManagerWithwebServiceDataProvider" class="com.loose.coupling.UserManager">
        <constructor-arg ref="webServiceDataProvider" />
    </bean>
</beans>